# Web (Next.js) production image
FROM node:20-bullseye-slim AS deps
WORKDIR /app
COPY package.json package-lock.json* ./
COPY apps/web/package.json apps/web/
# Install only production deps for workspace (deterministic)
RUN npm ci --omit=dev --workspaces=false && npm ci --workspace @apps/web --omit=dev

FROM node:20-bullseye-slim AS builder
WORKDIR /app
COPY . .
# Reuse installed deps from the `deps` stage and run the web build
COPY --from=deps /app/node_modules ./node_modules
RUN npm --workspace @apps/web run build

FROM node:20-bullseye-slim AS runner
WORKDIR /app
ENV NODE_ENV=production
COPY --from=builder /app/apps/web/.next ./apps/web/.next
COPY --from=builder /app/apps/web/package.json ./apps/web/package.json
COPY --from=builder /app/node_modules ./node_modules
EXPOSE 3000
CMD ["npm", "--workspace", "@apps/web", "run", "start"]
