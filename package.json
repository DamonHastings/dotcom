{
  "name": "career-platform-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:api",
    "dev:web": "npm --workspace @apps/web run dev",
    "dev:api": "npm --workspace @apps/api run start:dev",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@apps/web",
    "build:api": "turbo run build --filter=@apps/api",
    "lint": "turbo run lint --no-cache && eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "test": "turbo run test",
    "migration:check": "npm --workspace @apps/api run migration:check",
    "changelog:generate": "ts-node scripts/generate-changelog.ts",
    "changelog:check": "node scripts/check-changelog.js"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.20",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.17",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.6",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "zod": "^4.1.11"
  }
}
